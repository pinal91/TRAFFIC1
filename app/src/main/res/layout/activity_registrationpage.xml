<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:background="@drawable/ic_login_screen"
    android:orientation="vertical"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.traffic.Registrationpage" >

    <EditText
        android:id="@+id/etxtname"
        android:layout_width="match_parent"
        android:background="@drawable/editstyle"
        android:textColor="#00a99d"
        android:gravity="center"
         android:layout_height="40dp"
        android:hint="Enter Your Name"
        android:layout_marginTop="5dp"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/etxtphone"
        
        android:layout_width="match_parent"
        android:background="@drawable/editstyle"
        android:textColor="#00a99d"
        android:gravity="center"
          android:layout_height="40dp"
         android:layout_marginTop="5dp"
        android:ems="10"
        android:hint="Enter Your Phone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/etxtemailid"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="center"
        android:background="@drawable/editstyle"
        android:textColor="#00a99d"
          android:layout_height="40dp"
        android:hint="Enter Your Email ID"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etxtpass"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:ems="10"
        android:gravity="center"
        android:background="@drawable/editstyle"
        android:textColor="#00a99d"
        android:hint="Enter Password"
          android:layout_height="40dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/etxtcpass"
        android:layout_width="match_parent"
          android:layout_marginTop="5dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:ems="10"
        android:background="@drawable/editstyle"
        android:textColor="#00a99d"
        android:hint="Enter Confirm Password"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/bb"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Submitt"
        android:layout_marginTop="20dp"
        android:background="#00a99d"
        
        android:textColor="#fff"
        android:textSize="18sp" />

</LinearLayout>
